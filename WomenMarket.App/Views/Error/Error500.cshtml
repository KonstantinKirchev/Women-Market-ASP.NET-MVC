
@{
    ViewBag.Title = "500 Internal Server Error";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!
                </h1>
                <h2>
                     @ViewBag.Title
                </h2>
                <div class="error-details">
                    Sorry, an error has occured on server side!
                </div>
                <div class="error-actions">
                    @Html.ActionLink("Take Me Home", "Index", "Home", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
                </div>
            </div>
        </div>
    </div>
</div>

