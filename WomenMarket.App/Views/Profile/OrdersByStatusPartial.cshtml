@using WomenMarket.Models.Enums
@model PagedList.IPagedList<WomenMarket.Models.ViewModels.MyOrderViewModel>
@using PagedList.Mvc;
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Order number</th>
        <th>Date of order</th>
        <th>Date of delivery</th>
        <th>Products</th>
        <th>Total amount</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.DateOfOrder</td>
            <td>@order.DateOfDelivery</td>
            <td>@Html.ActionLink("products", "Products", "ShoppingCart", routeValues: new { area = "", id = order.Id }, htmlAttributes: null)</td>
            <td>@order.TotalPrice lv.</td>
            <td>@order.Status</td>
        </tr>
    }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("MyOrders", new { page }))




