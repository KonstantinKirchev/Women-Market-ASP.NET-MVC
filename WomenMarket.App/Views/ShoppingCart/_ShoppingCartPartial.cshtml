<div class="cart" id="myCart">
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @{
            decimal total = 0.00m;
        }
        @foreach (var cart in Model)
        {
            ViewBag.ShoppingCartId = cart.ShoppingCartId;

            total += (cart.Product.Price * cart.Units);
            <tr>
                <td>@cart.Product.Name</td>
                <td>
                    @Ajax.ActionLink("-", "DecreaseProductUnits", new { area = "", cartId = cart.ShoppingCartId, id = cart.ProductId }, new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "units",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-danger", id = "decrease"})

                    <span id="units">@cart.Units</span>

                    @Ajax.ActionLink("+", "IncreaseProductUnits", new { area = "", cartId = cart.ShoppingCartId, id = cart.ProductId }, new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        UpdateTargetId = "units",
                        InsertionMode = InsertionMode.Replace
                    }, new { @class = "btn btn-success", id = "increase" })
                </td>
                <td>@(cart.Product.Price * cart.Units)</td>
                <td>@Html.ActionLink("Remove", "RemoveProduct", "ShoppingCart", routeValues: new { area = "", cartId = cart.ShoppingCartId, id = cart.ProductId }, htmlAttributes: new { @class = "btn btn-danger" })</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<h2>Total: @total lv.</h2>
@Html.ActionLink("Order now", "PlaceOrder", "ShoppingCart", routeValues: new { area = "", id = ViewBag.ShoppingCartId, totalAmount = total }, htmlAttributes: new { @class = "btn btn-success" })
