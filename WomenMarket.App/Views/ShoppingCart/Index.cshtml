@using WomenMarket.App.Models.ViewModels
@model ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}

@if (Model == null || Model.Products.Count == 0)
{
    <div class="container">
        <h1>You don't have any products in your shopping cart.</h1>
    </div>
}
else
{
    <div class="container">
        <h1>My @ViewBag.Title</h1>
        <div class="cart" id="myCart">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td><button (click)="decrease(@product.Id)">-</button> @product.Unites <button (click)="increase(@product.Id)">+</button></td>
                            <td>@product.Price</td>
                            <td>@Html.ActionLink("Remove", "RemoveProduct", "ShoppingCart", routeValues: new { area = "", cartId = Model.Id, id = product.Id }, htmlAttributes: new { @class = "btn btn-danger" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <h2>Total: @Model.TotalPrice lv.</h2>
        @using(@Html.BeginForm()){
            @Html.HiddenFor(m => m.Id)
            <button class="btn btn-success">Order now</button>
        }
        <br>
        <br>
    </div>
}

