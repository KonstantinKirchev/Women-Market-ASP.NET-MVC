@using WomenMarket.App.Extensions
@using WomenMarket.App.Models.ViewModels
@model IEnumerable<WomenMarket.Models.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Products";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
            <form class="navbar-form" role="search" method="get" action="~/products/search">
                <div class="input-group add-on">
                    <input class="form-control" placeholder="Search" name="product" id="srch-term" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
        <div class="row" style="margin-bottom: 10vh;">
            @foreach (var product in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@product.ImageUrl" alt="product">
                        <div class="caption">
                            <h3>@product.Name</h3>
                            <p>@product.Description</p>
                            <h3 style="display: flex; justify-content: space-between;"><span>@product.Quantity</span><span style="color: red;">@product.Price lv</span></h3>
                            @if (Request.IsAuthenticated && !User.IsInRole("Admin"))
                            {
                                <p>
                                    <a class="btn btn-primary" role="button">Add to cart</a>
                                </p>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <p>
                                    <a class="btn btn-primary" role="button">Edit</a>
                                    <a class="btn btn-danger" role="button">Delete</a>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
