@using WomenMarket.Models.ViewModels
@model IPagedList<ProductViewModel>

@{
    ViewBag.Title = "Products";
}

<div class="container">
    <div class="row">
        <div hidden="hidden" id="productToCart" style="color: white; background-color: green; margin-top: 10px; font-size: 2em;">The product was successfully added to your shopping cart</div>
        <h1 class="page-header">@ViewBag.Title</h1>
        @using (Html.BeginForm("Search", "Products", FormMethod.Get, new {@class = "navbar-form", role = "search"}))
            {
                <div class="input-group add-on">
                    @Html.TextBox("product", ViewBag.currentFilter as string, new {@class = "form-control", placeholder = "Search by product name"})
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        @*@using (Ajax.BeginForm("Search", new { }, new AjaxOptions
        {
            HttpMethod = "GET",
            UpdateTargetId = "results",
            InsertionMode = InsertionMode.Replace
        }, new { @class = "navbar-form", role = "search" }))

        {
            <div class="input-group add-on">
                @Html.TextBox("product", ViewBag.currentFilter as string, new { @class = "form-control", placeholder = "Search by product name" })
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        }*@
        <div class="row" id="results">
            @*@Html.Partial("_ProductResult", Model)*@
            @Html.DisplayFor(product => product)
        </div>
    </div>
    @if (Model.PageCount > 1)
    {
        @Html.PagedListPager(Model, page => Url.Action("All", new { page }))
    }
</div>
