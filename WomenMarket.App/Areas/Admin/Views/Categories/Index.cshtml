@using WomenMarket.Models.EntityModels
@model IEnumerable<Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", routeValues: new { area = "Admin", id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", routeValues: new { area = "Admin", id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-success" })
</p>
