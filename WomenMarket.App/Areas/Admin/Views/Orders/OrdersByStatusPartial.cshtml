@using WomenMarket.Models.Enums
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Order number</th>
            <th>Date of order</th>
            <th>Date of delivery</th>
            <th>Client</th>
            <th>Products</th>
            <th>Total amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.DateOfOrder</td>
                <td>@order.DateOfDelivery</td>
                <td>@Html.ActionLink("client", "Client", "Orders", routeValues: new { area = "Admin", id = order.Id }, htmlAttributes: null)</td>
                <td>@Html.ActionLink("products", "Products", "Orders", routeValues: new { area = "Admin", id = order.Id }, htmlAttributes: null)</td>
                <td>@order.TotalPrice lv.</td>
                <td>@order.Status</td>
                @if (order.Status == OrderStatus.Pending)
                {
                    <td>@Html.ActionLink("Deliver", "DeliverOrder", "Orders", routeValues: new { area = "Admin", id = order.Id }, htmlAttributes: new { @class = "btn btn-danger" })</td>
                }
            </tr>
        }
    </tbody>
</table>




