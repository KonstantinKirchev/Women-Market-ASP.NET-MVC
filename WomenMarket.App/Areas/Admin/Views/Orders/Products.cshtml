@using WomenMarket.Models.EntityModels
@model IEnumerable<ShoppingCartProduct>

@{
    ViewBag.Title = "Products in the order";
}
<div class="container">
    <h1>@ViewBag.Title</h1>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Name</th>
                <th>Farm</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model)
            {
                <tr>
                    <td>@entity.Product.Name</td>
                    <td>@entity.Product.Owner.Name</td>
                    <td>@entity.Units @entity.Product.Quantity.Split()[1]</td>
                    <td>@entity.Product.Price lv.</td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    @Html.ActionLink("Back to orders", "Index", "Orders", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-danger" })
    <br>
</div>
